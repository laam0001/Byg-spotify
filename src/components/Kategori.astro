---
const {box, header, img} = Astro.props
---

<div class="box">
    <h1>{header}</h1>
    <img src={img}>
</div>

<style>
    .box {
        background-color: #44836C;
        padding: 10px;
        width: 150px;
        aspect-ratio: 1;
        overflow: hidden;
        border-radius: 10px;
        margin: 15px;
    }

    h1 {
        padding-left: 5px;
       margin-top: 10px;
    }

    img {
        width: 100px;
        height: 100px;
        rotate: 25deg;
        padding-left: 70px;
        padding-bottom: 10px;
        padding-top: 0px;
    }

</style>